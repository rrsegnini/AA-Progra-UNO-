<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danielalvarado.insta_aa.MainActivity"
    android:background="@drawable/instagram_background">

    <ImageView
        android:id="@+id/imageViewGallery"
        android:layout_width="246dp"
        android:layout_height="341dp"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp" />

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="116dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="392dp">

        <Button
            android:id="@+id/openFiltersActivityBtn"
            android:layout_width="134dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="16dp"
            android:onClick="filterButtonClicked"
            android:text="Filters"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/viewImageBtn"
            android:layout_width="134dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/openFiltersActivityBtn"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:onClick="viewImageClicked"
            android:text="Open image"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="1dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
